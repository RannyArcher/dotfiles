##### AUTOSTART #####
exec --no-startup-id ~/.config/i3/show-workspaces.sh
exec --no-startup-id ~/.autostart
exec --no-startup-id xborders --config .config/xborders/config.json
exec_always --no-startup-id killall polybar ; polybar -q -c ~/.config/i3/polybar.ini
#exec --no-startup-id nm-applet
#exec --no-startup-id volumeicon

# backlight shortcuts
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

# Setting the modifier key
set $mod Mod1
set $super Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+c kill

# focus navigation
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# horizontal splitting
bindsym $mod+i split h

# vertical splitting
bindsym $mod+v split v

# container layout (stacked, tabbed, toggle split, fullscreen)
# bindsym $mod+s layout stacking
# bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+tab focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child


# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show


# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"

# workspace navigation
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4

# move container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4

# restart i3
bindsym $mod+Shift+r restart

# resize window 
bindsym $super+h resize shrink width 10 px
bindsym $super+k resize grow height 10 px
bindsym $super+j resize shrink height 10 px
bindsym $super+l resize grow width 10 px

# remove title window
for_window [class="^.*"] border pixel 0

# gaps configuration
gaps inner 10

# prevent focus wrapping
focus_wrapping no
